\newcommand*{\App}[1]{Ap\'endice~#1\xspace}
\newcommand*{\Eqn}[1]{Ec.~#1\xspace}
\newcommand*{\Fig}[1]{Figura~#1\xspace}
\newcommand*{\Refn}[1]{Ref.~#1\xspace}
\newcommand*{\Sect}[1]{Secci\'on~#1\xspace}
\newcommand*{\Tab}[1]{Tabla~#1\xspace}
\newcommand*{\Apps}[2]{Ap\'endices~#1 y #2\xspace}
\newcommand*{\Eqns}[2]{Ecs.~#1 y #2\xspace}
\newcommand*{\Figs}[2]{Figuras~#1 y #2\xspace}
\newcommand*{\Refns}[2]{Refs.~#1 y #2\xspace}
\newcommand*{\Sects}[2]{Secciones~#1 y #2\xspace}
\newcommand*{\Tabs}[2]{Tablas~#1 y #2\xspace}
\newcommand*{\Apprange}[2]{Ap\'endices~#1--#2\xspace}
\newcommand*{\Eqnrange}[2]{Ecs.~#1--#2\xspace}
\newcommand*{\Figrange}[2]{Figuras~#1--#2\xspace}
\newcommand*{\Refrange}[2]{Refs.~#1--#2\xspace}
\newcommand*{\Sectrange}[2]{Secciones~#1--#2\xspace}
\newcommand*{\Tabrange}[2]{Tablas~#1--#2\xspace}

% More Cross-referencing
\newcommand*{\Ch}[1]{Cap\'itulo~#1\xspace}
\newcommand*{\Chs}[2]{Cap\'itulos~#1 y #2\xspace}
\newcommand*{\Chrange}[2]{Cap\'itulos~#1--#2\xspace}

\newcommand*{\Part}[1]{Parte~#1\xspace}
\newcommand*{\Parts}[2]{Partes~#1 and #2\xspace}
\newcommand*{\Partrange}[2]{Partes~#1--#2\xspace}